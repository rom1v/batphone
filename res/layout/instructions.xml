  <!-- @author Romana Challans <romana@servalproject.org> -->
 
     <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="fill_parent"
     android:layout_height="fill_parent" >

     <!-- Header -->

     <include
         android:id="@+id/headerLayout"
         layout="@layout/header_layout" />
     <!-- Body -->
  	<TableLayout 
        android:id="@+id/tableInstr"   	
        style="@style/sinstrTable">
        
        <TableRow 
            android:id="@+id/tableInstrHeader"
            style="@style/sinstrTableRow">   
            
            <TextView
         		android:id="@+id/instrtitle"
         		style="@style/srhizome_header"
         		android:text="@string/instrtitle" /> 
         
        </TableRow>	
        
        <TableRow 
            android:id="@+id/tableInstr1"
            style="@style/sinstrTableRow">
            
            <TextView
         		android:id="@+id/instr1"
         		style="@style/sinstr"
         		android:text="@string/instr1" />
                      
        </TableRow>
                 
		<TableRow 
            android:id="@+id/tableInstr2"
            style="@style/sinstrTableRow">
           
           <TextView
         		android:id="@+id/exception1"
         		style="@style/sinstrbold"
         		android:text="@string/exception1" />
                         
        </TableRow>    
                      
        <TableRow 
            android:id="@+id/tableInstr3"
            style="@style/sinstrTableRow">
           
      		<TextView
         		android:id="@+id/exception2"
         		style="@style/sinstrbold"
         		android:text="@string/exception2" />           
            
        </TableRow>  
                 
         <TableRow 
            android:id="@+id/tableInstr4"
            style="@style/sinstrTableRow">
           
           <TextView
         		android:id="@+id/instr2"
         		style="@style/sinstr"
         		android:text="@string/instr2" />
            
        </TableRow>  
               
         <TableRow 
            android:id="@+id/tableInstr5"
            style="@style/sinstrTableRow">
          
            <TextView
         		android:id="@+id/instrmenuhint"
         		style="@style/sinstr"
         		android:text="@string/instrmenuhint" />
            
        </TableRow>  
               
         <TableRow 
            android:id="@+id/tableInstr6"
            style="@style/sinstrTableRow">
            
			<Button
         		android:id="@+id/btnInstr"
                style="@style/sbtnrhizome"
         		android:text="@string/btnok" />
			
        </TableRow>
        
	</TableLayout>

 </RelativeLayout>