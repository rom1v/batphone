  <!-- @author Romana Challans <romana@servalproject.org> -->
  
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent" >

          <!-- Header -->

          <include
              android:id="@+id/headerLayout"
              layout="@layout/header_layout" />
          
          <!-- Body -->
  <TableLayout 
        android:id="@+id/tableSettings"   	
        style="@style/smainTable">
        
        <TableRow android:id="@+id/tablesettingsscreen_header"
            style="@style/srhizomeTableRow2">  
                    
            <TextView
                android:id="@+id/settingsscreen_header"
                style="@style/srhizome_header"
                android:text="@string/settingsscreen_header"/>
        </TableRow>	
 <!-- Wifi Menu -->       
        <TableRow 
            android:id="@+id/tableSettings1"
            style="@style/srhizomeTableRow">
            <Button 
                android:id="@+id/btnWifiSettings"
                style="@style/sbtnrhizome"
                android:text="@string/WifiSettingsLabel"/>  
    		        
		<TextView android:id="@+id/WifiSettingsText"
    		style="@style/stextsettings"
    		android:text="@string/WifiSettingsText" />
        </TableRow>  
 <!-- Accounts -->         
        <TableRow 
            android:id="@+id/tableSettings2"
            style="@style/srhizomeTableRow">
		
            <Button android:id="@+id/btnAccountsSettings"
                style="@style/sbtnrhizome"
                android:text="@string/AccountsSettingsLabel"/>  
    		        
		<TextView android:id="@+id/AccountsSettingsText"
    		style="@style/stextsettings"
    		android:text="@string/AccountsSettingsText" />
        </TableRow>  
 <!-- Logs -->         
        <TableRow 
            android:id="@+id/tableSettings3"
            style="@style/srhizomeTableRow">
		
            <Button android:id="@+id/btnLogShow"
                style="@style/sbtnrhizome"
                android:text="@string/LogShowLabel"/>  
    		        
		<TextView android:id="@+id/LogShowText"
    		style="@style/stextsettings"
    		android:text="@string/LogShowText" />
        </TableRow>  
 <!-- Reset Wifi -->         
        <TableRow 
            android:id="@+id/tableSettings4"
            style="@style/srhizomeTableRow">
		
            <Button android:id="@+id/btnResetWifi"
                style="@style/sbtnrhizome"
                android:text="@string/ShowResetWifi"/>  
    		        
		<TextView android:id="@+id/ResetWifiText"
    		style="@style/stextsettings"
    		android:text="@string/ResetWifiText" />
        </TableRow>                  
        
    </TableLayout> 

</RelativeLayout>

